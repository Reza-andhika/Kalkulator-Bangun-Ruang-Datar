<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Datar.Menu_Datar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <Button
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:id="@+id/belah_ketupat"
        android:background="@drawable/belah_ketupat"
        android:text="Belah ketupat"
        android:textColor="@android:color/black" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:id="@+id/Persegi"
        android:layout_marginTop="20dp"
        android:background="@drawable/persegi"
        android:text="Persegi"
        android:textColor="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:id="@+id/jajar_genjang"
                android:background="@drawable/jajar_genjang"
                android:text="jajar genjang"
                android:textColor="@android:color/black" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:id="@+id/linkaran"
                android:layout_marginTop="20dp"
                android:background="@drawable/lingkaran"
                android:text="Lingkaran"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:id="@+id/persegi_panjang"
                android:background="@drawable/persegi_panjang"
                android:text="persegi panjang"
                android:textColor="@android:color/black" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:id="@+id/segitiga"
                android:layout_marginTop="20dp"
                android:background="@drawable/segitiga"
                android:text="Segitiga"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:id="@+id/trapesium"
                android:background="@drawable/trapesium"
                android:text="trapesium"
                android:textColor="@android:color/black" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:id="@+id/pytagoras"
                android:layout_marginTop="20dp"
                android:background="@drawable/pytagoras"
                android:text="pytagoras"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:id="@+id/segitiga_siku"
                android:background="@drawable/siku"
                android:text="Segitiga siku siku"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>